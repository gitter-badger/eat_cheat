<h1>Items#new</h1>
<%= form_tag("/items/new", method: "get") do %>
 <%= label_tag(:q, "Search for:") %>
 <%= text_field_tag(:q) %>
 <%= submit_tag("Search") %>
<% end %>

<% @items.each do |item| %>
    <div style="margin: 25px;"><%= item["fields"]["item_name"] %></div>
    <%= form_for [@item] do |f| %>
      <%= f.text_field :name, :value => item["fields"]["item_name"] %>
      <%= f.text_field :nutritionix_id, value: item["fields"]["item_id"] %>
      <%= f.number_field :calories, :value => item["fields"]["nf_calories"] %>
      <%= f.number_field :fat, :value => item["fields"]["nf_total_fat"] %>
      <%= f.number_field :protein, :value => item["fields"]["nf_protein"] %>
      <%= f.text_field :carbs, :value => item["fields"]["nf_total_carbohydrate"] %>
      <%= f.number_field :serving_weight_grams, :value => item["fields"]["nf_serving_weight_grams"] %>
      <%= f.submit %>
      
    <% end  %>
  

<% end %>

