<!-- Daily Food Diary - selects MEAL by TIME and will be moved to the search page later -->

          <h2 class="sub-header">Daily Food Diary</h2>
         <%= form_for [@meal] do |f| %>
           <% if @meal.errors.any? %>
            <div id="error_explanation">
             <h2><%= pluralize(@meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

              <ul>
              <% @meal.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              </ul>
            </div>
              <% end %>
              <% end %>

              <div>
                <%= f.label "Select a recipe" %>
                <%= f.select(:recipe_id, @recipe_options,{ include_blank: true }) %>
              </div>
              <div>
                <h5>Or</h5>
              </div>
              <div>
                <%= f.label "Select an item" %>
                <%= f.select(:item_id, @item_options,{ include_blank: true }) %>
              </div>
              <div>
                <%= f.label "Select a time" %>
                <%= f.datetime_local_field :time_eaten  %>
              </div>
              <div>
                <%= f.submit "Save meal" %>
              </div>
              <% end %>
              



<!-- Datatable for ALL meal display -->
        <div class="container">

          <h2><%= link_to "Yesterday", root_path(:@date_from => Time.new.beginning_of_day.to_i-1.day, :@date_til => Time.new.end_of_day.to_i-1.day), :class => "ui-button" %></h2>

          <h2><%= link_to "TODAY", root_path(:@date_from => Time.new.beginning_of_day.to_i, :@date_til => Time.new.end_of_day.to_i), :class => "ui-button" %></h2>

          <h2><%= link_to "Tomorrow", root_path(:@date_from => Time.new.beginning_of_day.to_i+1.day, :@date_til => Time.new.end_of_day.to_i+1.day), :class => "ui-button" %></h2>


          <h2>Nutrition Log</h2>

            <p>Your logged food will display below.</p> 
 
          <!-- Display morning data  -->          
                <table id='datatable' cellspacing="0" class="table table-striped">
                  <thead>
                    <tr>
                      <th id="head" scope="col" class="nobg" style="width:50%">Morning</th>
                      <th id='h-alt' scope="col" style="width:12%">cal</th>
                      <th id='h-alt' scope="col" style="width:12%">carb</th>
                      <th id='h-alt' scope="col" style="width:12%">prot</th>
                      <th id='h-alt' scope="col" style="width:12%">fat</th>
                    </tr>
                  </thead>
                <tbody>
                    <% cal = 0 %> <% carb = 0 %> <% prot = 0 %> <% fat = 0 %>
                    <% @food_morning.each do |food| %>
                    
                      <tr>
                        <td class='name'><%= food[:name] %></td>
                        <td><%= food[:calories] %></td>
                        <% cal += food[:calories] %>

                        <td><%= food[:carbs] %></td>
                        <% carb += food[:carbs] %>

                        <td><%= food[:protein] %></td>
                        <% prot += food[:protein] %>

                        <td><%= food[:fat] %></td>
                        
                      </tr>
                    <% end %>
                      <tr>      
                        <td class='name' style='font-weight:bold;'>My totals</td>
                        <td><%= cal %></td>
                        <td><%= carb %></td>
                        <td><%= prot %></td>
                        <td>will be added once fat isnt diplaying my date anymore</td>
                      </tr>
                  </tbody>
                </table>

