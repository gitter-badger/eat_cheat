<h1>Update Your <%= @recipe.name %> Recipe </h1>

<hr/>


  <div style="margin:20px;">
    <%= form_for [@user, @recipe] do |f| %>
      
      <%= f.fields_for @ingredient do |b| %> 
        <%= b.label :item %> 
        <%= b.select(:item_id, @item_options) %>
        <%= b.label "Amount in recipe" %> 
        <%= b.number_field :quant_of_item_eaten %>
        <%= b.label :time_eaten %> 
      <% end %>

      <%= f.submit "Add item to recipe" %>
    <% end %>
    <div>
      <%= link_to "Back to #{@recipe.name}", user_recipe_path(@user, @recipe) %> 
    </div>
  </div>




