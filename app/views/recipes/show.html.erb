<div class="container">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">

			<h1><%= @recipe.name %></h1>

			<% @recipe.ingredients.each do |ingredient| %> 
				<table>
					<thead>
						<tr>
							
							<th><%= "#{ingredient.recipe.name} ingredients" %></th>
							<th>&nbsp;</th>
							<th>Calories</th>
							
						</tr>
					</thead>
					<tr>
						<td><%= ingredient.item.name %></td>
						<td>&nbsp;</td>
						<td><%= ingredient.item.calories %></td>

					</tr>
					
				</table>
			<% end %> 
			<br> 
			<%= link_to "Back to Dashboard", '/' %> 
		</div>
		<div class="col-md-3"></div>
	</div>
</div>


